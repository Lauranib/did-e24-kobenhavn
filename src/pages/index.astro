				<input type="radio" id="kredit" name="levering">
				<label for="kredit">Kredit</label>
				<input type="radio" id="paypal" name="levering" checked="checked">
				<label for="paypal">Paypal</label>
				<input type="radio" id="mobilepay" name="levering">
				<label for="mobilepay">Mobilepay</label>
				
			</div>

			<div class="flex justify-end hover:rotate-hor-top">
				<Button variant="primary" size="medium">Til betaling</Button>
			</div>
		</form>
	</section>
</MainLayout>